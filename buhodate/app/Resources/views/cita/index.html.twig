{% extends 'base.html.twig' %}

{% block body %}
    <h1>Citas list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Idemisor</th>
                <th>Idreceptor</th>
                <th>Estado</th>
                <th>Finicio</th>
                <th>Ffin</th>
                <th>Direccion</th>
                <th>Calificacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for citum in citas %}
            <tr>
                <td><a href="{{ path('cita_show', { 'id': citum.id }) }}">{{ citum.id }}</a></td>
                <td>{{ citum.idEmisor }}</td>
                <td>{{ citum.idReceptor }}</td>
                <td>{{ citum.estado }}</td>
                <td>{% if citum.fInicio %}{{ citum.fInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if citum.fFin %}{{ citum.fFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ citum.direccion }}</td>
                <td>{{ citum.calificacion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cita_show', { 'id': citum.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cita_edit', { 'id': citum.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cita_new') }}">Create a new citum</a>
        </li>
    </ul>
{% endblock %}
