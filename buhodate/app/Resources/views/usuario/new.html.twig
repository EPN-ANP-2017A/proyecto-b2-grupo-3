{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container">
        {# --- Titulo --- #}
        <div class="row">
            <div class="col">
                <h1 class="text-center text-muted">Regístrate</h1>
            </div>
        </div>

        {# --- Logo --- #}
        <div class="row">
            <div class="col">
                <img class="text-center" src="{{ asset('image/logo2.png') }}" alt="Log buhodate" width="100" height="100" >
            </div>
        </div>

        {# --- Formulario --- #}
        <div class="row">
            <div class="col">
                {{ form_start(form, { 'attr' : {
                    'id' : 'registro',
                    'class' : 'form-group',
                }}) }}
            </div>
        </div>
        {# --- Alias --- #}
        <div class="form-group row">
            <div class="col">
                {{ form_widget(form.alias, { 'attr' : {
                    'id' : 'alias',
                    'name' : 'alias',
                    'placeholder' : 'Ingrese un alias',
                    'class' : 'form-control'

                }}) }}
            </div>
        </div>

        {# --- Correo --- #}
        <div class="form-group row">
            <div class="col">
                {{ form_widget(form.mail, { 'attr' : {
                    'id' : 'mail',
                    'name' : 'mail',
                    'placeholder' : 'Ingrese su correo Institucional EPN',
                    'class' : 'form-control'

                }}) }}
            </div>
        </div>

        {# --- Contraseña --- #}
        <div class="form-group row">
            <div class="col">
                {{ form_widget(form.pass, { 'attr' : {
                    'id' : 'pass',
                    'name' : 'pass',
                    'placeholder' : 'Ingrese una clave',
                    'class' : 'form-control'

                }}) }}
            </div>
        </div>
        {# --- Boton --- #}
        <div class="row">
            <div class="col">
                <input class=" btn boton1" type="submit" value="Registrar" />
            </div>
        </div>

        {# --- Finalizar el formulario --- #}
        {{ form_end(form) }}

        {# --- Iniciar Sesión ---#}
        <div class="row">
            <div class="col text-center">
                <label for="reg_Ini">¿Ya te encuentras registrado?</label>
                <a class="" href="{{ path('usuario_index') }}" role="button" id="reg_Ini">Inicia Sesión</a>
            </div>
        </div>
    </div>


{% endblock %}
