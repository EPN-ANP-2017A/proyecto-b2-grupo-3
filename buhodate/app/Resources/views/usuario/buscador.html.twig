{% extends 'layout.html.twig' %}
{% block title %}BuhoDate | ESFOT {% endblock %}
{% block body %}
<div class="contenidoBusqueda">
    <div class="row" id="menu">
        <div class=" col col-lg-5 col-md-2 col-sm-20">
            <img class="logo" src="{{ asset('image/logo1.png') }}" alt="logo buho">
        </div>
    </div>
    <h1>Busqueda de citas</h1>
